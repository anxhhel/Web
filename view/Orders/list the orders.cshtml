@model List<SushiRestaurant.Models.Order>

<h2>My Orders</h2>
<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Total Items</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.OrderDate</td>
                <td>@order.Status</td>
                <td>@order.OrderDetails.Count</td>
            </tr>
        }
    </tbody>
</table>
