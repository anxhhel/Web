@model SushiRestaurant.Models.Order

<h2>Order Details</h2>

<p><strong>Order ID:</strong> @Model.OrderId</p>
<p><strong>Customer:</strong> @Model.Customer.UserName</p>
<p><strong>Date:</strong> @Model.OrderDate</p>
<p><strong>Status:</strong> @Model.OrderStatus</p>

<h3>Order Items</h3>
<table>
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.MenuItem.Name</td>
                <td>@item.Quantity</td>
                <td>@item.ItemPrice</td>
                <td>@item.TotalPrice</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Total Amount:</strong> @Model.TotalAmount</p>
