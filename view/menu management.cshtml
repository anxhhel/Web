@model List<SushiRestaurant.Models.MenuItem>

<h2>Manage Menu</h2>
<a asp-action="Create">Add New Item</a>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MenuItemID">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.MenuItemID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
